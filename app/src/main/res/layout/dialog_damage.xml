<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Повреждение:"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/damage_description_et"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/radio_paint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Покраска"/>
        <RadioButton
            android:id="@+id/radio_fix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ремонт"/>
        <RadioButton
            android:id="@+id/radio_fix_and_paint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ремонт и покраска"/>
        <RadioButton
            android:id="@+id/radio_replace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Замена"/>
    </RadioGroup>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/damage_ok_button"/>
</LinearLayout>