<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.gii.insreport.AnimaActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_anima"
        android:id="@+id/canvas"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/googleMaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_map_black_24dp"
        android:tint="@android:color/white"
         />

    <View
        android:id="@+id/dummy4"
        android:layout_width="1dp"
        android:layout_height="16dp"
        app:layout_anchor="@id/googleMaps"
        app:layout_anchorGravity="top|right|end" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/photoFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_margin="16dp"
        android:src="@drawable/ic_camera_alt_black_24dp"
        android:tint="@android:color/white"
        app:layout_anchor="@id/dummy4"
        app:layout_anchorGravity="top|right|end" />


    <View
        android:id="@+id/dummy3"
        android:layout_width="1dp"
        android:layout_height="16dp"
        app:layout_anchor="@id/photoFab"
        app:layout_anchorGravity="top|right|end" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/iconFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_margin="16dp"
        android:src="@drawable/ic_photo_black_24dp"
        app:layout_anchor="@id/dummy3"
        app:layout_anchorGravity="top|right|end" />

    <View
        android:id="@+id/dummy2"
        android:layout_width="1dp"
        android:layout_height="16dp"
        app:layout_anchor="@id/iconFab"
        app:layout_anchorGravity="top|right|end" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/undoFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_menu_revert"
        app:layout_anchor="@id/dummy2"
        app:layout_anchorGravity="top|right|end" />


</android.support.design.widget.CoordinatorLayout>
